<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mrt.adorsholipifortakiya.MainViewController">
    <top>
        <HBox fx:id="buttonContainer" alignment="CENTER" spacing="50.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Button text="A B C D..." onAction="#handleAlphabetButtonAction"
                    prefWidth="200" prefHeight="80"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-border-radius: 10; -fx-background-radius: 10; -fx-cursor: hand;"/>
            <Button text="1 2 3..." onAction="#handleNumberButtonAction"
                    prefWidth="200" prefHeight="80"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-border-radius: 10; -fx-background-radius: 10; -fx-cursor: hand;"/>
            <Button text="অ আ ই..." onAction="#handleBanglaVowelButtonAction"
                    prefWidth="200" prefHeight="80"
                    style="-fx-background-color: #6c36f4; -fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-border-radius: 10; -fx-background-radius: 10; -fx-cursor: hand;"/>
            <Button text="ক খ গ..." onAction="#handleBanglaConsonantButtonAction"
                    prefWidth="200" prefHeight="80"
                    style="-fx-background-color: #f42d69; -fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-border-radius: 10; -fx-background-radius: 10; -fx-cursor: hand;"/>
            <Button text="১ ২ ৩..." onAction="#handleBanglaNumbersButtonAction"
                    prefWidth="200" prefHeight="80"
                    style="-fx-background-color: #f68535; -fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-border-radius: 10; -fx-background-radius: 10; -fx-cursor: hand;"/>
            <Button text="Exit" onAction="#handleExitButtonAction"
                    prefWidth="200" prefHeight="80"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-border-radius: 10; -fx-background-radius: 10; -fx-cursor: hand;"/>
        </HBox>
    </top>
    <center>
        <StackPane fx:id="contentPane" BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>
