<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<HBox alignment="CENTER" spacing="50.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mrt.adorsholipifortakiya.MainViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Button text="Alphabets" onAction="#handleAlphabetButtonAction"
            prefWidth="200" prefHeight="80"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-border-radius: 10; -fx-background-radius: 10; -fx-cursor: hand;"/>
    <Button text="Numbers" onAction="#handleNumberButtonAction"
            prefWidth="200" prefHeight="80"
            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-border-radius: 10; -fx-background-radius: 10; -fx-cursor: hand;"/>
    <Button text="Exit" onAction="#handleExitButtonAction"
            prefWidth="200" prefHeight="80"
            style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-border-radius: 10; -fx-background-radius: 10; -fx-cursor: hand;"/>
</HBox>
